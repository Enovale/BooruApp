<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:BooruApp.ViewModels"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:mvvm="clr-namespace:Glitonea.Mvvm;assembly=Glitonea"
             xmlns:views="clr-namespace:BooruApp.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BooruApp.Views.MainView"
             Name="MainViewControl"
             Foreground="White"
             Background="{StaticResource NeptuneMediumBackgroundBrush}"
             DataContext="{mvvm:DataContextSource viewModels:MainViewModel}">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0">
            <TextBox Text="{Binding SearchText}" />
            <Button Command="{ReflectionBinding SearchButtonPressed}"
                    HorizontalAlignment="Right"
                    HotKey="Enter" Content="🔍" />
        </Grid>
        <views:ImageListView Grid.Row="1" />
    </Grid>
</UserControl>